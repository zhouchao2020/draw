<?php

function smarty_modifier_arabic2eng($intNum){
    $intNum = intval($intNum);
    $strEngNum = '';
    switch ($intNum){
        case 1:
            $strEngNum = 'one';
            break;
        case 2:
            $strEngNum = 'two';
            break;
        case 3:
            $strEngNum = 'three';
            break;
        case 4:
            $strEngNum = 'four';
            break;
        case 5:
            $strEngNum = 'five';
            break;
        case 6:
            $strEngNum = 'six';
            break;
        default :
            break;
    }
    return $strEngNum;
}
